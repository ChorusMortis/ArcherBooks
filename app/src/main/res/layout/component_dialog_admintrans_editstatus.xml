<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_admintrans_cl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/style_dialog_radius"
    android:backgroundTint="@color/gray_bg"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_admintrans_tv_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Update status"
        android:textColor="@color/main_green"
        android:textSize="24sp"
        app:fontFamily="@font/sf_ui_text_bold"
        app:layout_constraintEnd_toEndOf="@+id/dialog_admintrans_tv_message"
        app:layout_constraintStart_toStartOf="@+id/dialog_admintrans_tv_message"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_admintrans_tv_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Did the borrower already pick up the book?"
        android:textColor="@color/text_over_gray_bg"
        android:textSize="16sp"
        app:fontFamily="@font/sf_ui_text_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_admintrans_tv_label" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_admintrans_btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/style_rounded_button_on_colored"
        android:backgroundTint="@color/text_over_gray_bg"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/maintext"
        app:fontFamily="@font/sf_ui_text_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_admintrans_btn_confirm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/dialog_admintrans_tv_message"
        app:layout_constraintTop_toBottomOf="@+id/dialog_admintrans_tv_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_admintrans_btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_rounded_button_on_colored"
        android:backgroundTint="@color/main_green"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/maintext"
        app:fontFamily="@font/sf_ui_text_regular"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_admintrans_btn_cancel"
        app:layout_constraintEnd_toEndOf="@+id/dialog_admintrans_tv_message"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_admintrans_btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/dialog_admintrans_btn_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>