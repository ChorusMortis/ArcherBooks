<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_searchresults_iv_headerbackground"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@color/main_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_searchresults_tv_headertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="@font/sf_ui_text_bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_searchresults_iv_headerbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filterrevelance"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        app:fontFamily="@font/sf_ui_text_bold"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:stateListAnimator="@null"
        android:text="Relevance"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_iv_headerbackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filternewest"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        app:fontFamily="@font/sf_ui_text_regular"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:stateListAnimator="@null"
        android:text="Newest"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_filterrevelance" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filteroldest"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        app:fontFamily="@font/sf_ui_text_regular"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:stateListAnimator="@null"
        android:text="Oldest"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_filternewest" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_confirmbtn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/small_btn_radius"
        android:backgroundTint="@color/main_green"
        android:text="Show Results"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:fontFamily="@font/sf_ui_text_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_filteroldest" />

</androidx.constraintlayout.widget.ConstraintLayout>