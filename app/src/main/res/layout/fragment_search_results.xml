<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/searchresults_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:fontFamily="@font/sf_ui_text_regular"
        android:text="Search Results"
        android:textColor="@color/main_green"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchresults_et_searchbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_search_bar_radius"
        app:fontFamily="@font/sf_ui_text_regular"
        android:hint="Search Archer Books"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:textColor="@color/main_green"
        android:textColorHint="#838383"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/searchresults_ib_searchbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchresults_tv_title" />

    <ImageButton
        android:id="@+id/searchresults_ib_searchbtn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_bar_btn"
        android:src="@drawable/search_icon_white"
        app:layout_constraintBottom_toBottomOf="@+id/searchresults_et_searchbar"
        app:layout_constraintEnd_toStartOf="@+id/searchresults_ib_sortbtn"
        app:layout_constraintTop_toTopOf="@+id/searchresults_et_searchbar" />

    <ImageButton
        android:id="@+id/searchresults_ib_sortbtn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/small_btn_radius"
        android:backgroundTint="@color/main_green"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/filter_icon"
        app:layout_constraintBottom_toBottomOf="@+id/searchresults_et_searchbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchresults_et_searchbar" />

    <HorizontalScrollView
        android:id="@+id/searchresults_hsv_filterbuttonsscrollview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchresults_et_searchbar">

        <LinearLayout
            android:id="@+id/searchresults_ll_filterbuttonslayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchresults_btn_filtermatchall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/filter_rounded_btn"
                android:backgroundTint="#61AA63"
                app:fontFamily="@font/sf_ui_text_regular"
                android:minWidth="0dip"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchresults_btn_filtermatchtitle"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/filter_rounded_btn"
                android:backgroundTint="#C3C3C3"
                app:fontFamily="@font/sf_ui_text_regular"
                android:minWidth="0dip"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Title"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchresults_btn_filtermatchauthor"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/filter_rounded_btn"
                android:backgroundTint="#C3C3C3"
                app:fontFamily="@font/sf_ui_text_regular"
                android:minWidth="0dip"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Author"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchresults_btn_filtermatchsubject"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/filter_rounded_btn"
                android:backgroundTint="#C3C3C3"
                app:fontFamily="@font/sf_ui_text_regular"
                android:minWidth="0dip"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Subject"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchresults_btn_filtermatchpublisher"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/filter_rounded_btn"
                android:backgroundTint="#C3C3C3"
                app:fontFamily="@font/sf_ui_text_regular"
                android:minWidth="0dip"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Publisher"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchresults_rv_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchresults_hsv_filterbuttonsscrollview" />

</androidx.constraintlayout.widget.ConstraintLayout>