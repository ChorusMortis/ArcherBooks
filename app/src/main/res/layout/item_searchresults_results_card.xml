<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itm_searchresults_iv_background"
        android:layout_width="325dp"
        android:layout_height="274dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/for_you_background" />

    <ImageView
        android:id="@+id/itm_searchresults_iv_bookcover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:adjustViewBounds="true"
        android:background="@color/black"
        android:elevation="8dp"
        android:maxWidth="119dp"
        android:maxHeight="182dp"
        app:layout_constraintBottom_toTopOf="@+id/itm_searchresults_gl_statustop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/fourth_wing" />

    <TextView
        android:id="@+id/itm_searchresults_tv_booktitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sf_ui_text_bold"
        android:text="The Will of the Many (2015)"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/itm_searchresults_tv_bookauthors"
        app:layout_constraintEnd_toEndOf="@+id/itm_searchresults_iv_background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/itm_searchresults_iv_bookcover"
        app:layout_constraintTop_toTopOf="@+id/itm_searchresults_iv_bookcover"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/itm_searchresults_tv_bookauthors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_ui_text_regular"
        android:text="by James Islington, Barbara Steinfield"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/itm_searchresults_btn_borrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/itm_searchresults_tv_booktitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/itm_searchresults_tv_booktitle"
        app:layout_constraintTop_toBottomOf="@+id/itm_searchresults_tv_booktitle" />

    <Button
        android:id="@+id/itm_searchresults_btn_borrowbtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FFFFFF"
        android:text="Borrow"
        android:textAllCaps="false"
        android:textColor="@color/main_green"
        app:layout_constraintBottom_toBottomOf="@+id/itm_searchresults_iv_bookcover"
        app:layout_constraintStart_toStartOf="@+id/itm_searchresults_tv_bookauthors"
        app:layout_constraintTop_toBottomOf="@+id/itm_searchresults_tv_bookauthors" />

    <ImageButton
        android:id="@+id/itm_searchresults_btn_favoritebtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@+id/itm_searchresults_tv_bookauthors"
        app:layout_constraintTop_toTopOf="@+id/itm_searchresults_btn_borrowbtn"
        app:srcCompat="@drawable/favorite_btn_toggled_on" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itm_searchresults_gl_statustop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/itm_searchresults_tv_bookstatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/book_card_status"
        android:backgroundTint="#115F07"
        android:fontFamily="@font/sf_ui_text_regular"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/itm_searchresults_tv_booktitle"
        app:layout_constraintStart_toStartOf="@+id/itm_searchresults_iv_bookcover"
        app:layout_constraintTop_toTopOf="@+id/itm_searchresults_gl_statustop" />

</androidx.constraintlayout.widget.ConstraintLayout>
