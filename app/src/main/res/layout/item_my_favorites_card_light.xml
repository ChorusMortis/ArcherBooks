<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myfavoritescard_cv_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myfavoritescard_cl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/for_you_card_light">

        <ImageView
            android:id="@+id/myfavoritescard_iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:elevation="8dp"
            android:maxWidth="119dp"
            android:maxHeight="182dp"
            app:layout_constraintBottom_toTopOf="@+id/myfavoritescard_gl_statustop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/book_wizard_of_oz" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myfavoritescard_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            android:textColor="@color/subtext"
            android:textSize="12sp"
            app:fontFamily="@font/sf_ui_text_medium"
            app:layout_constraintBottom_toTopOf="@+id/myfavoritescard_tv_authors"
            app:layout_constraintStart_toStartOf="@+id/myfavoritescard_tv_title"
            app:layout_constraintTop_toBottomOf="@+id/myfavoritescard_tv_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myfavoritescard_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Fourth Wing"
            android:textColor="@color/maintext"
            android:textSize="18sp"
            app:fontFamily="@font/sf_ui_text_heavy"
            app:layout_constraintBottom_toTopOf="@+id/myfavoritescard_tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/myfavoritescard_iv_cover"
            app:layout_constraintTop_toTopOf="@+id/myfavoritescard_iv_cover"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myfavoritescard_tv_authors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="by Rebecca Yarros"
            android:textColor="@color/subtext"
            android:textSize="12sp"
            app:fontFamily="@font/sf_ui_text_regular"
            app:layout_constraintBottom_toTopOf="@+id/myfavoritescard_btn_favorite"
            app:layout_constraintEnd_toEndOf="@+id/myfavoritescard_tv_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/myfavoritescard_tv_date"
            app:layout_constraintTop_toBottomOf="@+id/myfavoritescard_tv_date" />

        <ImageButton
            android:id="@+id/myfavoritescard_btn_favorite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/small_btn_radius"
            app:layout_constraintBottom_toBottomOf="@+id/myfavoritescard_iv_cover"
            app:layout_constraintStart_toStartOf="@+id/myfavoritescard_tv_authors"
            app:layout_constraintTop_toBottomOf="@+id/myfavoritescard_tv_authors"
            app:srcCompat="@drawable/favorite_btn_toggled_on" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/myfavoritescard_gl_statustop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.81" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myfavoritescard_tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/book_card_status"
            android:backgroundTint="@color/white"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/main_green"
            app:fontFamily="@font/sf_ui_text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myfavoritescard_tv_title"
            app:layout_constraintStart_toStartOf="@+id/myfavoritescard_iv_cover"
            app:layout_constraintTop_toTopOf="@+id/myfavoritescard_gl_statustop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>