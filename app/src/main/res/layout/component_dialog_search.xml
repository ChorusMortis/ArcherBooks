<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_bottomdialog_radius"
    android:elevation="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_searchresults_tv_header_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Sort By"
        android:textColor="@color/main_green"
        android:textSize="16sp"
        app:fontFamily="@font/sf_ui_text_heavy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/gray_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_tv_header_sort" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_sort_relevance"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/style_dialog_button_radius"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Relevance"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_sort_newest"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_dialog_button_radius"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Newest"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_searchresults_btn_sort_relevance"
        app:layout_constraintStart_toEndOf="@+id/dialog_searchresults_btn_sort_relevance"
        app:layout_constraintTop_toTopOf="@+id/dialog_searchresults_btn_sort_relevance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_searchresults_tv_header_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Filter By"
        android:textColor="@color/main_green"
        android:textSize="16sp"
        app:fontFamily="@font/sf_ui_text_heavy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_sort_relevance" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/gray_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_tv_header_filter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filter_all"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/style_dialog_button_radius"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="All"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_dialog_button_radius"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Title"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_searchresults_btn_filter_all"
        app:layout_constraintStart_toEndOf="@+id/dialog_searchresults_btn_filter_all"
        app:layout_constraintTop_toTopOf="@+id/dialog_searchresults_btn_filteroldest" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filter_author"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_dialog_button_radius"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Author"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_searchresults_btn_filter_title"
        app:layout_constraintStart_toEndOf="@+id/dialog_searchresults_btn_filter_title"
        app:layout_constraintTop_toTopOf="@+id/dialog_searchresults_btn_filteroldest" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filter_subject"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/style_dialog_button_radius"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Subject"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintStart_toStartOf="@+id/dialog_searchresults_btn_filter_all"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_filter_all" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_filter_publisher"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_dialog_button_radius"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Publisher"
        android:textAllCaps="false"
        android:textColor="@color/dark_background"
        android:textSize="12sp"
        app:fontFamily="@font/sf_ui_text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_searchresults_btn_filter_subject"
        app:layout_constraintStart_toEndOf="@+id/dialog_searchresults_btn_filter_subject"
        app:layout_constraintTop_toTopOf="@+id/dialog_searchresults_btn_filter_subject" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_searchresults_btn_confirmbtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/style_circular_background"
        android:backgroundTint="@color/main_green"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Show Results"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:fontFamily="@font/sf_ui_text_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/dialog_searchresults_btn_filter_subject"
        app:layout_constraintTop_toBottomOf="@+id/dialog_searchresults_btn_filter_subject" />

</androidx.constraintlayout.widget.ConstraintLayout>