<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_viewed_recently_cl"
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_viewed_recently_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:elevation="1.5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ViewedRecently.CornerSize"
        app:srcCompat="@drawable/book_snow_white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_viewed_recently_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_ui_text_bold"
        android:maxLines="2"
        android:text="Snow White and the Seven Dwarfs"
        android:textColor="@color/dark_background"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_viewed_recently_iv_cover" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_viewed_recently_authors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/sf_ui_text_regular"
        android:maxLines="1"
        android:text="Disney Book Group"
        android:textColor="@color/text_over_white_bg"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/item_viewed_recently_tv_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_viewed_recently_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/item_viewed_recently_tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>