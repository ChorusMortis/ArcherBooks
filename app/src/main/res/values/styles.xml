<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_green</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
    </style>

    <style name="Botd.Bg.CornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="Botd.Inner.CornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ViewedRecently.CornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="SearchResults.CornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="NavBarStyle" parent="">
        <item name="android:fontFamily">@font/sf_ui_text_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="PopupMenuText" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/main_green</item>item>
        <item name="android:titleMarginStart">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
</resources>